@model LibraryManagementSystem.Models.Book

<h2>Book Details</h2>

<div>
    <h3>@Model.Title</h3>
    <p><strong>Author:</strong> @Model.Author</p>
    <p><strong>ISBN:</strong> @Model.ISBN</p>
    <p><strong>Published Year:</strong> @Model.PublishedYear</p>
    <p><strong>Category:</strong> @Model.Category?.Name</p>
    <p><strong>Status:</strong> @Model.Status</p>
    <p><strong>Rent Price:</strong> $@Model.RentPrice</p>
    <p><strong>Sell Price:</strong> $@Model.SellPrice</p>
    
    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <img src="@Model.ImagePath" alt="Book Image" width="100" />
    }
</div>

<a href="@Url.Action("Index", "Book")" class="btn btn-secondary">Back to List</a>
